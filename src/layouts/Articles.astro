---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  content: {
    title: string;
    description: string;
    order?: number;
    updatedDate?: string;
    heroImage?: string;
    heroImageAlt?: string;
  };
}

const {
  content: { title, description, heroImage, heroImageAlt },
} = Astro.props;
---

<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
    <style>
      .title {
        font-size: 1.6em;
        margin: 0.25em 0 0;
        line-height: 1.1em;
        letter-spacing: -0.02em;
      }
      img {
        float: right;
      }
    </style>
  </head>

  <body>
    <Header />
    <main>
      <article>
        {heroImage && <img width={75} src={heroImage} alt={heroImageAlt} />}
        <h1 class="title">{title}</h1>
        <slot />
      </article>
    </main>
    <Footer />
  </body>
</html>
