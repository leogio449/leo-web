---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import HeaderHeadline from "../components/HeaderHeadline.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../config";

// Use Astro.glob() to fetch all posts, and then sort them by date.
const posts = (await Astro.glob("./articles/*.{md,mdx}")).sort(
  (a, b) => a.frontmatter.order - b.frontmatter.order
);
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      h3 {
        margin: 0;
        font-size: 1.5em;
        line-height: 1.1em;
        letter-spacing: -0.02em;
      }
      a {
        text-decoration: none;
      }
      ul {
        list-style-type: none;
        padding: unset;
      }
      ul li {
        display: flex;
        flex-direction: row;
        margin-bottom: 30px;
      }
      ul li time {
        font-style: italic;
        color: rgb(198, 198, 198);
      }
      ul li p {
        margin: 5px 0;
      }

      img {
        width: 140px;
      }

      .link-subdescription {
        color: white;
        font-weight: lighter;
      }
    </style>
  </head>
  <body>
    <Header />

    <HeaderHeadline />

    <main>
      <section>
        <ul>
          {
            posts.map((post) => (
              <li>
                <div>
                  <h3>
                    <a href={post.url}>{post.frontmatter.title}</a>
                  </h3>
                  <p><a class="link-subdescription" href={post.url}>{post.frontmatter.description || null}</a></p>
                </div>

                {post.frontmatter.heroImage && (
                  <div>
                    <img width='75px' src={post.frontmatter.heroImage} />
                  </div>
                )}
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
